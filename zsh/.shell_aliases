alias glo='clear; git log --graph --oneline --decorate;'
alias gld='clear; git log --graph --date=short --pretty=format:"%Cred%h%Creset -%C(yellow)%d%Creset %Cgreen(%ad)%Creset : %<(80,trunc)%s %C(bold blue)<%an>%Creset"'
# git branch detail:
gbd() { git for-each-ref --sort=committerdate --format='%(committerdate) %09 %(authorname) %09 %(refname)' }
        
alias tr1='tree -L 1'
alias tr2='tree -L 2'

## fzf ##
alias pf="fzf --preview='less {}' --bind shift-up:preview-page-up,shift-down:preview-page-down"

## Ruby/Rails ##
alias be='bundle exec '
alias ber='be rspec;'
alias rdbm='be rails db:migrate'

